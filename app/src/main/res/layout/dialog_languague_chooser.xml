                    android:src="@drawable/russia" />

                <TextView
                    style="@style/ChooserItemLabelStyle"
                    android:text="@string/russian" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_turkish"
                style="@style/ChooserItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_turkish"
                    style="@style/ChooserItemSelectStyle" />

                <ImageView
                    android:id="@+id/flag_turkey"
