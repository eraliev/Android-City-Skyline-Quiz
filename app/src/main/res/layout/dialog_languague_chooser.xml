                    android:text="@string/russian"
                    style="@style/LanguageItemLabelStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_turkish"
                style="@style/LanguageItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_turkish"
                    style="@style/LanguageItemRadioButtonStyle" />

                <ImageView
                    android:id="@+id/flag_turkey"
                    android:src="@drawable/turkey"
                    style="@style/LanguageItemFlagStyle" />

