<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingStart="30dp"
        android:paddingTop="15dp"
        android:text="@string/settings_language_title"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:fadeScrollbars="false">

        <LinearLayout
            android:id="@+id/container_language_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/choice_english"
                style="@style/ChooserItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_english"
                    style="@style/ChooserItemSelectStyle" />

                <ImageView
                    android:id="@+id/flag_united_kingdom"
                    style="@style/ChooserItemFlagStyle"
                    android:src="@drawable/united_kingdom" />

                <TextView
                    style="@style/ChooserItemLabelStyle"
                    android:text="@string/english" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_spanish"
                style="@style/ChooserItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_spanish"
                    style="@style/ChooserItemSelectStyle" />

                <ImageView
                    android:id="@+id/flag_spain"
                    style="@style/ChooserItemFlagStyle"
                    android:src="@drawable/spain" />

                <TextView
                    style="@style/ChooserItemLabelStyle"
                    android:text="@string/spanish" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_french"
                style="@style/ChooserItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_french"
                    style="@style/ChooserItemSelectStyle" />

                <ImageView
                    android:id="@+id/flag_france"
                    style="@style/ChooserItemFlagStyle"
                    android:src="@drawable/france" />

                <TextView
                    style="@style/ChooserItemLabelStyle"
                    android:text="@string/french" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_german"
                style="@style/ChooserItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_german"
                    style="@style/ChooserItemSelectStyle" />

                <ImageView
                    android:id="@+id/flag_germany"
                    style="@style/ChooserItemFlagStyle"
                    android:src="@drawable/germany" />

                <TextView
                    style="@style/ChooserItemLabelStyle"
                    android:text="@string/german" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_italian"
                style="@style/ChooserItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_italian"
                    style="@style/ChooserItemSelectStyle" />

                <ImageView
                    android:id="@+id/flag_italy"
                    style="@style/ChooserItemFlagStyle"
                    android:src="@drawable/italy" />

                <TextView
                    style="@style/ChooserItemLabelStyle"
                    android:text="@string/italian" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_dutch"
                style="@style/ChooserItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_dutch"
                    style="@style/ChooserItemSelectStyle" />

