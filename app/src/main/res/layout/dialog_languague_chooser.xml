            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_korean"
                style="@style/LanguageItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_korean"
                    style="@style/LanguageItemRadioButtonStyle" />

                <ImageView
                    android:id="@+id/flag_south_korea"
