                    style="@style/LanguageItemLabelStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_portuguese"
                style="@style/LanguageItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_portuguese"
                    style="@style/LanguageItemRadioButtonStyle" />

                <ImageView
                    android:id="@+id/flag_portugal"
