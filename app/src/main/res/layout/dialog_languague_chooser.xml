            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_portuguese"
                style="@style/ChooserItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_portuguese"
                    style="@style/ChooserItemSelectStyle" />

                <ImageView
                    android:id="@+id/flag_portugal"
