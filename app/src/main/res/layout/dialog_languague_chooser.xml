<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingStart="30dp"
        android:paddingTop="15dp"
        android:text="@string/settings_language_title"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:fadeScrollbars="false">

        <LinearLayout
            android:id="@+id/container_language_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/choice_english"
                style="@style/LanguageItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_english"
                    style="@style/LanguageItemRadioButtonStyle" />

                <ImageView
                    android:id="@+id/flag_united_kingdom"
                    android:src="@drawable/united_kingdom"
                    style="@style/LanguageItemFlagStyle" />

                <TextView
                    android:text="@string/english"
                    style="@style/LanguageItemLabelStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_spanish"
                style="@style/LanguageItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_spanish"
                    style="@style/LanguageItemRadioButtonStyle" />

                <ImageView
                    android:id="@+id/flag_spain"
                    android:src="@drawable/spain"
                    style="@style/LanguageItemFlagStyle" />

                <TextView
                    android:text="@string/spanish"
                    style="@style/LanguageItemLabelStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_french"
                style="@style/LanguageItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_french"
                    style="@style/LanguageItemRadioButtonStyle" />

                <ImageView
                    android:id="@+id/flag_france"
                    android:src="@drawable/france"
                    style="@style/LanguageItemFlagStyle" />

                <TextView
                    android:text="@string/french"
                    style="@style/LanguageItemLabelStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_german"
                style="@style/LanguageItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_german"
                    style="@style/LanguageItemRadioButtonStyle" />

                <ImageView
                    android:id="@+id/flag_germany"
                    android:src="@drawable/germany"
                    style="@style/LanguageItemFlagStyle" />

                <TextView
                    android:text="@string/german"
                    style="@style/LanguageItemLabelStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_italian"
                style="@style/LanguageItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_italian"
                    style="@style/LanguageItemRadioButtonStyle" />

                <ImageView
                    android:id="@+id/flag_italy"
                    android:src="@drawable/italy"
                    style="@style/LanguageItemFlagStyle" />

                <TextView
                    android:text="@string/italian"
                    style="@style/LanguageItemLabelStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choice_dutch"
                style="@style/LanguageItemContainerStyle">

                <RadioButton
                    android:id="@+id/radio_button_dutch"
                    style="@style/LanguageItemRadioButtonStyle" />

                <ImageView
                    android:id="@+id/flag_netherlands"
