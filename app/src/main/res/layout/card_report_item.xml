<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="6dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/container_report_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/question_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text=" 23 " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/city_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="3"
                android:adjustViewBounds="true"
                android:background="@drawable/round_outline"
                android:scaleType="fitXY"
                tools:src="@drawable/los_angeles" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_outline_answer_choice"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/flag_choice_one"
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_outline"
                        tools:src="@drawable/australia" />

                    <TextView
                        android:id="@+id/city_name_choice_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:text="@string/sydney" />

                    <ImageView
                        android:id="@+id/mark_choice_one"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="4dp"
                        tools:src="@drawable/ic_incorrect" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_outline_answer_choice"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/flag_choice_two"
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_outline"
                        tools:src="@drawable/argentina" />

                    <TextView
                        android:id="@+id/city_name_choice_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:text="@string/buenos_aires" />

                    <ImageView
                        android:id="@+id/mark_choice_two"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="4dp"
                        tools:src="@drawable/ic_incorrect" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_outline_answer_choice"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/flag_choice_three"
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_outline"
                        tools:src="@drawable/united_states" />

                    <TextView
                        android:id="@+id/city_name_choice_three"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:text="@string/los_angeles" />

                    <ImageView
                        android:id="@+id/mark_choice_three"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="4dp"
                        tools:src="@drawable/ic_correct" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_outline_answer_choice"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/flag_choice_four"
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_outline"
                        tools:src="@drawable/england" />

                    <TextView
                        android:id="@+id/city_name_choice_four"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:text="@string/london" />

                    <ImageView
                        android:id="@+id/mark_choice_four"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="4dp"
                        tools:src="@drawable/ic_incorrect" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

